<div class="col-9">
    <h3 class="text text-white bg-warning pl-3 pt-3 pb-3">Danh sách thể loại sách</h3>
    <div class="container mt-3">
        <div class="w-100 text-right">
        <a href='/category/add' class="btn btn-outline-success"><i class="fa fa-plus"></i> Thêm thể loại</a>
        </div>
        {{#if this.empty}}
            <h5> Không có dữ liệu </h5>
        {{else}}
            <div class="row pl-3 text-warning mt-3">
                <div class="col-4"><h5>Tên thể loại</h5></div>
            </div>
            
            <div class="card mt-1">
                {{#each this.categories }}
                    <div class="row mt-3 pl-3 pb-3">
                        <div class="col-4 mt-auto mb-auto"><h5>{{catName}}</h5></div>
                        <div class="col-2 mt-auto mb-auto"><a href="/category/edit?id={{catID}}" class="btn btn-info">Sửa</a></div>
                    </div>
                {{/each}}
            </div>
        {{/if}}				
    </div>
</div>
