{{#with order}}
    <div class="col-9">
        <h3 class="text text-white bg-warning pl-3 pt-3 pb-3">Đơn hàng {{orderID}}</h3>
        <div class="row">
            <div class="col-8">		
                <div class="container">
                    <div class="row pl-3 text-warning">
                        <div class="col-3 pl-3"><h5>Sách</h5></div>
                        <div class="col-3"><h5>Tên sách</h5></div>
                        <div class="col-3"><h5>Số lượng</h5></div>
                        <div class="col-3"><h5>Đơn giá</h5></div>
                    </div>

                    <div class="card mt-1">
                        <div class="row mt-3 pl-3 pb-3">
                            <div class="col-3"><img src="/BookWorm/book/{{bookID}}.jpg" class="w-50"></div>
                            <div class="col-3"><h5>{{bookName}}</h5></div>
                            <div class="col-3"><p>{{quantity}}</p></div>
                            <div class="col-3"><p>{{format_number price}}</p></div>					
                        </div>
                    </div>
        
                </div>
                <div class="dropdown-divider"></div>
                <div class="w-100 mt-4 mb-4"><h5 class="font-weight-bold text-right">Tổng tiền: {{format_number total}}</h5></div>
            </div>

            <div class="col-4 font-weight-bold">
                <h5 class="text-info">Thông tin khách hàng</h5>
                <p>Họ tên: {{name}}</p>
                <p>Số điện thoại: {{phone}}</p>
                <o>Địa chỉ giao hàng: {{address}}</o>
            </div>
        </div>
    </div>
{{/with}}