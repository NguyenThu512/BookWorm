<div class="col-9">
    <h3 class="text text-white bg-warning pl-3 pt-3 pb-3">Danh sách sách đang bán</h3>
    <div class="container mt-3">
        <div class="w-100 text-right">
        <a href="/sell/add" class="btn btn-outline-success"><i class="fa fa-plus"></i> Thêm sách</a>
        </div>
        {{#if this.empty}}
            <h5> Không có đang bán sách  </h5>
        {{else}}
            <div class="row pl-3 text-warning mt-3">
                <div class="col-2 pl-3"><h5>Sách</h5></div>
                <div class="col-4"><h5>Tên sách</h5></div>
                <div class="col-2"><h5>Số lượng</h5></div>
                <div class="col-2"><h5>Đơn giá</h5></div>
            </div>
            
            <div class="card mt-1">
                {{#each this.products }}
                    <div class="row mt-3 pl-3 pb-3">
                        <div class="col-2 mt-auto mb-auto"><img src="/bookworm/book/{{bookID}}.jpg" class="w-50"></div>
                        <div class="col-4 mt-auto mb-auto"><h5>{{bookName}}</h5></div>
                        <div class="col-2 mt-auto mb-auto"><p>{{quantity}}</p></div>
                        <div class="col-2 mt-auto mb-auto"><p>{{format_number bookPrice}}</p></div>
                        <div class="col-2 mt-auto mb-auto"><a href="/sell/edit?id={{bookID}}" class="btn btn-info">Sửa</a></div>
                    </div>
                {{/each}}
            </div>
        {{/if}}				
    </div>
</div>