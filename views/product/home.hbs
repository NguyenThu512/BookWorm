<h4 class="w-100">Sách mới phát hành</h4>
<div>
	<div id="carousel-example-1" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner row w-100 mx-auto" role="listbox">
				{{#each newBook }}
					{{#if active}}
						<a class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 active product-item" href="/buy/detail/{{bookID}}">
						<img src="/BookWorm/book/{{bookID}}.jpg" class="img-fluid" alt="img{{stt}}">
					</a>
					{{else}}
					<a class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 product-item" href="/buy/detail/{{bookID}}">
						<img src="/BookWorm/book/{{bookID}}.jpg" class="img-fluid" alt="img{{stt}}">
					</a>
					{{/if}}
				{{/each}}
			</div>
			<a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span></a>
			<a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span></a>
	</div>
</div>

