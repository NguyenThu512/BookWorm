{{#section 'js'}}
	<script>
		$('#carousel-example-1').on('slide.bs.carousel', function(f) {
			var $f = $(f.relatedTarget);
			var idx = $f.index();
			var itemsPerSlide = 7;
			var totalItems = $('#carousel-example-1 .carousel-item').length;
			if (idx >= totalItems-(itemsPerSlide-1)) {
				var it = itemsPerSlide - (totalItems - idx);
				for (var i=0; i<it; i++) {
					if (f.direction=="left") {
						$('#carousel-example-1 .carousel-item').eq(i).appendTo('.carousel-inner');
					}
					else {
						$('#carousel-example-1 .carousel-item').eq(0).appendTo('.carousel-inner');
					}
				}
			}
		});
		
		$( "#itemCommon" ).hide();
		$( "#itemBest" ).hide();
		$( "#itemNew" ).hide();
		$( "#itemLow" ).hide();
		$( "#itemHigh" ).hide();

		$( "#common" ).click(function() {
			$( "#itemCommon" ).show();
			$( "#itemBest" ).hide();
			$( "#itemNew" ).hide();
			$( "#itemLow" ).hide();
			$( "#itemHigh" ).hide();
		});

		$( "#bestSeller" ).click(function() {
			
			$( "#itemCommon" ).hide();
			$( "#itemBest" ).show();
			$( "#itemNew" ).hide();
			$( "#itemLow" ).hide();
			$( "#itemHigh" ).hide();
		});

		$( "#new" ).click(function() {
			
			$( "#itemCommon" ).hide();
			$( "#itemBest" ).hide();
			$( "#itemNew" ).show();
			$( "#itemLow" ).hide();
			$( "#itemHigh" ).hide();
		});

		$( "#low" ).click(function() {
			
			$( "#itemCommon" ).hide();
			$( "#itemBest" ).hide();
			$( "#itemNew" ).hide();
			$( "#itemLow" ).show();
			$( "#itemHigh" ).hide();
		});

		$( "#high" ).click(function() {
			
			$( "#itemCommon" ).hide();
			$( "#itemBest" ).hide();
			$( "#itemNew" ).hide();
			$( "#itemLow" ).hide();
			$( "#itemHigh" ).show();
		});
	</script>
{{/section}}

<div class="col-9 row">
