			<i class="fa fa-fire text-danger fa-3x float-left"></i>
			<h5>TOP CÁC CUỐN SÁCH <br>
			ĐƯỢC NHIỀU NGƯỜI MUA</h5>
	</div>
	{{#each best}}
		<a class="card pt-2 pb-2 col-3 product-item" href="/buy/detail/{{bookID}}">
			<img src="/BookWorm/book/{{bookID}}.jpg" class="img-fluid">
			<div class="container">
				<h6><b>{{bookName}}</b></h6>	
