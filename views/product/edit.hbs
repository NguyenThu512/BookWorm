<div class="col-9">
	<form method="POST">
		<input class="w-25" type="text" id="bookID" name="bookID" hidden readonly value="{{this.book.bookID}}">

		<div class="form-group">
			<label for="bookName">Tên sách:</label>
			<input class="form-control w-50" type="text" id="bookName" name="bookName" autofocus value="{{this.book.bookName}}">
		</div>

		<div class="form-group">
			<label for="bookPrice">Đơn giá:</label>
			<input class="form-control w-50" type="text" id="bookPrice" name="bookPrice" value="{{format_number this.book.bookPrice}}">
		</div>

		<div class="form-group">
			<label for="bookPrice">Số lượng bán:</label>
			<input class="form-control w-50" type="text" id="bookName" name="bookName" autofocus value="{{this.book.quantity}}">
		</div>
		<a href='/sell' role="button" class=" btn btn-outline-warning" >Hủy bỏ</a>
		<button type="submit" class="btn btn-outline-danger ml-5" formaction="/sell/del">Xóa</button>
		<button type="submit" class="btn btn-outline-primary ml-5" formaction="/sell/save">Xác nhận</button>
	</form>
</div>
	