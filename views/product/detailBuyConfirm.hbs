{{#with order}}
<div class="col-9">
	<h3 class="text text-white bg-warning pl-3 pt-3 pb-3">Đơn hàng {{orderID}}</h3>
	<div class="container">
		<div class="row pl-3 text-warning">
			<div class="col-2 pl-3"><h5>Sản phẩm</h5></div>
			<div class="col-2"><h5>Tên sản phẩm</h5></div>
			<div class="col-2"><h5>Số lượng</h5></div>
			<div class="col-2"><h5>Đơn giá</h5></div>
			<div class="col-2"><h5>Người bán</h5></div>
		</div>
			<div class="card mt-1">
				<div class="row mt-3 pl-3 pb-3">
					<div class="col-2"><img src="/BookWorm/book/{{bookID}}.jpg" class="w-50"></div>
					<div class="col-2"><h5>{{bookName}}</h5></div>
					<div class="col-2"><p>{{quantity}}</p></div>
					<div class="col-2"><p>{{format_number price}}</p></div>
					<div class="col-2"><p>{{fullName}}</p></div>						
				</div>
			</div>	
		
		<div class="dropdown-divider"></div>
		<div class="w-100 mt-4 mb-4"><h5 class="font-weight-bold text-right">Tổng tiền: {{format_number total}}</h5></div>
		<div class="mt-3 mb-3 text-right">
			<a href="/buy/cancel?orderid={{orderID}}" class="btn btn-danger pt-2 pb-2" role="button">Hủy đơn</a>
		</div>
	</div>
</div>
{{/with}}
