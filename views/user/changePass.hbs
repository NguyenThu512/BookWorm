{{#section 'js'}}
<script>
		$("form").submit(function(event){
			event.preventDefault();
			const pass = $('#pwd').val();
            const confirm = $('#cpwd').val();
			
            if(pass.length===0)
            {
                alert('chưa nhập pass');
				return;
            }
            if(confirm.length===0)
            {
                alert('chưa nhập lại pass');
				return;
            }
            if(pass!=confirm)
			{
				alert('không hợp lệ');
				return;
			}
            else
            {
                alert('thay đổi thành công');
					$("form").off('submit').submit();
            }
			});

	</script>
{{/section}}

<div class="col-9">
	<form method="POST" action="">
		<div class="form-group">
			<label for="pwd">Mật khẩu mới:</label>
			<input class="form-control w-50" type="password" id="pwd" name="pwd" autofocus>
		</div>

		<div class="form-group">
			<label for="cpwd">Xác nhận mật khẩu mới:</label>
			<input class="form-control w-50" type="password" id="cpwd" name="cpwd">
		</div>

		<a href='/home' role="button" class="btn btn-outline-warning" >Hủy bỏ</a>
		<button id="btsubmit" type="submit" class="btn btn-outline-primary ml-5">Xác nhận</button>

	</form>
</div>